@model TournamentManagementLogic.Model.SetModel


<form class="row justify-content-center text-center my-2" asp-controller="Set" asp-action="Save" asp-route-matchId="@ViewData["MatchId"]">
    <div class="text-danger col-12" asp-validation-summary="ModelOnly"></div>
    <input asp-for="Id" hidden="true" />
    <input asp-for="SetNumber" hidden="true" />


    <div class="col-1">
        <input class="form-control" asp-for="FirstTeamScore" />
    </div>

    <div class="col-1 order-last">
        <input class="form-control" asp-for="SecondTeamScore" />
    </div>

    @* Save button *@
    <button type="submit" class="btn btn-primary col-1 me-2"
            data-bs-toggle-tooltip="tooltip" data-bs-trigger="hover" data-bs-title="Save set">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
            <path d="M2 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H9.5a1 1 0 0 0-1 1v7.293l2.646-2.647a.5.5 0 0 1 .708.708l-3.5 3.5a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L7.5 9.293V2a2 2 0 0 1 2-2H14a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h2.5a.5.5 0 0 1 0 1H2z" />
        </svg>
    </button>

    @if (Model.Id != Guid.Empty && Model.SetNumber > 0)
    {
        @* Delete button *@
        <button type="button" class="btn btn-danger col-1"
                data-bs-toggle="modal" data-bs-target="#deleteSetModal" data-bs-link-id="link@(Model.SetNumber)"
                data-bs-toggle-tooltip="tooltip" data-bs-trigger="hover" data-bs-title="Delete set">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
            </svg>
        </button>

        @* hidden link for modal *@
        <a id="link@(Model.SetNumber)" hidden asp-controller="Set" asp-action="Delete" asp-route-setId="@Model.Id" asp-route-matchId="@ViewData["MatchId"]"></a>
    }
</form>
