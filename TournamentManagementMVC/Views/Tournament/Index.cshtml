@model IEnumerable<TournamentManagementLogic.Model.TournamentBasicModel>

@{
    ViewData["Title"] = "Tournaments";
}

<h1>Tournaments</h1>

<p>
    <a asp-action="Create">Create New Tournament</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Open", "Open", item.Id  ) |
                    @Html.ActionLink("Delete", "Delete", item.Id )
                </td>
            </tr>
        }
    </tbody>
</table>
